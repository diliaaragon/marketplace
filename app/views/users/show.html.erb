<div class="container w-50 shadow-lg p-4 mb-5 bg-white rounded">
  <h1 class="text-info title text-center">User information</h1>
  <br>
  <div class="well span8 offset2 p-3">
    <div class="row-fluid user-row">
    <div class="panel-body">
      <div class="row-fluid">
        <div class="span3 text-center">
        <% if @user.photo.attached? %>
          <%= image_tag( @user.photo, class:' w-50 h-25' ) %>
        <% end %>
        </div>
        <div class="span6">
          <table class="table table-condensed table-responsive
            table-user-information">
            <body>
              <tr>
                <td>Name: </td>
                <td><%=@user.first_name%></td>
              <tr>
              <tr>
                <td>Last name: </td>
                <td><%=@user.last_name%></td>
              <tr>
              <tr>
                <td>Email: </td>
                <td><%=@user.email %></td>
              <tr>
              <tr>
                <td>Registered since: </td>
                <td><%=@user.created_at%></td>
              <tr>
            </body>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%=link_to 'Edit', edit_user_path, class:"btn btn-primary"%>
    <%= link_to 'Back', products_path, class:"btn btn-primary" %>
  </div>
</div>
