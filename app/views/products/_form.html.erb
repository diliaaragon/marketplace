<div class="container">
  <h1 class="text-info title"> <%= name %> Product </h1><br>
  <%= simple_form_for @product do |f| %>
    <%= f.file_field :image %><br>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.button :submit, class:"btn btn-primary" %>
    <%= link_to 'Back', products_path, class:"btn btn-primary" %>
    <br>
  <% end %>
</div>